{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db;Cache=Shared"
  },
  
  "JWTSecurity": {
    "Key": "some_secret_password_dont_share.123",
    "Issuer": "taltech.ee",
    "Audience": "taltech.ee",
    "ExpiresInSeconds": 86400,
    "RefreshTokenExpiresInDays": 7
  },

  "DataInitialization": {
    "DropDatabase": true,
    "MigrateDatabase": true,
    "SeedIdentity": true,
    "SeedData": true
  },
  
  "DefaultCulture": "en",
  "SupportedCultures": [
    "en",
    "et-EE"
  ],
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "AllowedHosts": "*"
}
